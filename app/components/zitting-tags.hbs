{{! ---- BESTUURSEENHEID ---- }}
<Tag @icon="map">
  {{this.bestuursNaam}}
</Tag>

{{! ---- LOCATIE ---- }}
{{#if @zitting.opLocatie}}
  <Tag @icon="map-pin">{{@zitting.opLocatie}}</Tag>
{{/if}}

{{! ---- START- EN EINDTIJD ---- }}
{{#if @zitting.gestartOpTijdstip}}
  <Tag @icon="calendar">
    {{date-range-format
      @zitting.gestartOpTijdstip
      @zitting.geeindigdOpTijdstip
    }}
  </Tag>
{{else if @zitting.geplandeStart}}
  <Tag @icon="calendar">
    {{date-format @zitting.geplandeStart}}
    (gepland)
  </Tag>
{{/if}}

{{! ---- AANWEZIGEN ---- }}
{{#if @showAanwezigen}}
  <AanwezigenTags @model={{@zitting}} />
{{/if}}

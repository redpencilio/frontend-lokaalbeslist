    @namePlural="tegenstanders"
    @hasMandatarissen={{this.hasMandatarissen}}
    @personen={{this.tegenstanderPersonen}}
  />
  <StemmingVoters
    @icon="more-horizontal"
    @count={{@stemming.aantalOnthouders}}
    @nameSingular="onthouder"
    @namePlural="onthouders"
    @hasMandatarissen={{this.hasMandatarissen}}
    @personen={{this.onthouderPersonen}}
  />

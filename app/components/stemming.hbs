    @namePlural="voorstanders"
    @hasMandatarissen={{this.hasMandatarissen}}
    @personen={{this.voorstanderPersonen}}
  />
  <StemmingVoters
    @icon="x"
    @count={{@stemming.aantalTegenstanders}}

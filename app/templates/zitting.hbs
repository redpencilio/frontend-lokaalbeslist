<Navbar />

<section class="section">

  <h2 class="title is-2">Zitting</h2>

  <ZittingTags @zitting={{@model.zitting}} @showAanwezigen={{true}} />

  <h3 class="title is-3">Agendapunten</h3>
  <div class="content">
    <ol>
      {{#each @model.agendapuntenSorted as |agendapunt|}}
        <li><LinkTo @route="agendapunt" @model={{agendapunt}}>
            {{default-value agendapunt.titel "Agendapunt zonder titel"}}
          </LinkTo></li>
      {{else}}
        <i>Agendapunten (nog) niet bekend</i>
      {{/each}}
    </ol>
  </div>
</section>

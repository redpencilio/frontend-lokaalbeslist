{{page-title "Mijn notificaties"}}
<Navbar />

<section class="section">
  <h3 class="title is-3"> Notificaties aanpassen </h3>
  <p class="subtitle is-5"> Hieronder kan je notificatie-instellingen aanpassen
  of verwijderen. </p>

  {{#each @model as |filter|}}
   <SubscriptionFilter::Filter
     @filter={{filter}}
     @title="Notificatie"
     @allowDelete={{true}}
     @requireEmail={{false}}
    />
  {{else}}
    <i> U hebt geen notificaties ingesteld. </i>
  {{/each}}
</section>
